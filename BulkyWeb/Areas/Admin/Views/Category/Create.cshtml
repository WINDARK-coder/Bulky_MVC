@model Category


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="r">
            <div class="border p-3">
                @* <div asp-validation-summary="All"></div> *@
                @* if you write ModelOnly summary then it will show only validation that exists in controller(not model) that didnt match to some property *@
                @* and if you write None it will not show the errors summary *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow"  />  @* when you write asp-for , then you dont need to write type of it *@
                    <label asp-for="Name" class="ms-2"></label> @* you also can use asp-for in label to show its name *@
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control border">
                            Back to List
                        </a>
                    </div>

                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" /> // this part is for client side validation (with no refresh of a page)
    // but page will be reloaded if you have any custom validations in controller
    }
}
